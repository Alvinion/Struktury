// ConsoleApplication3.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>


using namespace std;


struct typy{

        int liczba;
        char znak;
        double liczba2;

};

typy** losuj(int _n){
        
        typy** tab= new typy*[_n];        

        for (short x=0;x<_n;x++)
        {
                tab[x]=new typy;
                tab[x]->liczba=rand();
                tab[x]->znak=rand();
                tab[x]->liczba2=0;
        }

        return(tab);
}

void kasuj(typy** tab, int x)
{
        for(short a=0; a<x;a++)
        {
                delete tab[a];
        }

        delete tab;

}

void sortuj(typy** tab, int x){

        for(short a=0;a<x-1;a++)
         for(short b=0;b<x-1;b++)
                 if(tab[b+1]<tab[b])
                         swap(tab[b+1],tab[b]);

        
}


int zlicz(typy** tab, int x, char _znak){

	int start=0;
	int n= x;
	char znak1 = _znak1;

	for (short a=0;a<n; a++) {
		
		if(tab[a]->znak==znak1) start++;

	}
	return start;

}


void wysw_l(typy** tab, int x) {

	for (short a=0;a<x;a++){

		cout << tab[a]->liczba;

	}


}


void wysw_z(typy** tab, int x) {

	for (short a=0;a<x;a++){

		cout << tab[a]->znak;

	}



}

int _tmain(int argc, _TCHAR* argv[])
{

	typy** test1;
	test1=losuj(1000);
	sortuj(test1, 1000);
	cout << zlicz(test1,1000,'A');
	kasuj(test1, 1000);


	getchar();
	

	typy** test2;
	test2=losuj(10000);
	sortuj(test2, 10000);
	cout << zlicz(test2,10000,'B');
	kasuj(test2, 10000);


	getchar();



	typy** test3;
	test3=losuj(100000);
	sortuj(test3, 100000);
	cout << zlicz(test3,100000,'C');
	kasuj(test3, 100000);


	getchar();

	return 0;
}


